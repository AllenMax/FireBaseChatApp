<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <EditText
        android:id="@+id/editNotesText"
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/imgBookmark_notes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/editNotesText"
        android:layout_alignEnd="@+id/editNotesText"
        android:layout_marginBottom="19dp"
        android:clickable="true"
        android:src="@mipmap/ic_bookmark" />

    <TextView
        android:id="@+id/txtTimer_notes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="17dp"
        android:gravity="center"
        android:text="TextView" />

    <Button
        android:id="@+id/dialogButtonSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:text="Save" />


</RelativeLayout>